<style>
    .ftn-build-line{
        @apply absolute top-0 left-0;
        @apply w-[350px] h-[120px];
        @apply rounded-br-2xl;
        @apply border-r border-r-white/10;
        @apply border-b  border-b-white/10; 
    }
    .ftn-build-line-mask{
        @apply absolute top-0 left-0;
        @apply w-[calc(100%_+_1px)];
        @apply h-[calc(100%_+_1px)];
        @apply pt-0 pr-px pb-px pl-0;
        mask: linear-gradient(#fff 0 0) content-box,linear-gradient(#fff 0 0);
        mask-composite: exclude; 
        border-radius: inherit;
    }
    .ftn-build-line-mask div{
        @apply absolute -bottom-28 -left-28;
        @apply w-[600px] h-[500px];
        background: conic-gradient(rgba(255,255,255,.05), 
                        var(--brand_blue_400) 6%, 
                        var(--brand_turquoise_500) 10%, 
                        var(--brand_green_500) 14.9%,
                        rgba(109, 46, 255, 0) 15%);
        animation: build-line-rotate 10s linear infinite;
    }
    @keyframes build-line-rotate{
        60%, 100% {
            transform: translateZ(0) rotate(1turn);
        }
    }
</style>