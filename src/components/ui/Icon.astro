---
import IconBox from "../icon/IconBox.astro";
import IconChat from "../icon/IconChat.astro";
import IconCollaboration from "../icon/IconCollaboration.astro";
import IconGroup from "../icon/IconGroup.astro";
import IconLogo from "../icon/IconLogo.astro";
import IconRocket from "../icon/IconRocket.astro";

const iconMap = {
    logo: IconLogo,
    group: IconGroup,
    box: IconBox,
    chat: IconChat,
    rocket: IconRocket,
    collaboration: IconCollaboration
};

interface IconProps {
    name: keyof typeof iconMap;
    className?: string;
}

const { name, className = "" }: IconProps = Astro.props as IconProps;

const IconComponent = iconMap[name];

---

{IconComponent ? <IconComponent class={className}/> : null}