---
interface Link {
    href: string;
    text: string;
}

const { links = [] }: { links?: Link[] } = Astro.props;
---

<header class="">
    <div
        class="container flex justify-between items-center bg-blue-600 rounded-lg shadow-lg p-6"
    >
        <h1 class="text-2xl font-bold text-white">FTN agency</h1>
        <nav>
            <ul class="flex space-x-6">
                {
                    links.map((link: Link) => (
                        <li>
                            <a
                                href={link.href}
                                class="text-white hover:text-blue-200 transition duration-200"
                            >
                                {link.text}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>
    </div>
</header>
