---
const testimonios = [
    { name: "Juan Perez", feedback: "Gran trabajo, superó mis expectativas." },
    {
        name: "Ana Gomez",
        feedback:
            "El equipo fue muy profesional y entregó un excelente producto.",
    },
];
---

<section class="py-20 bg-white">
    <div class="container mx-auto text-center">
        <h2 class="text-3xl font-bold mb-8">Testimonios</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
                testimonios.map((testimonio) => (
                    <div class="bg-gray-100 p-6 rounded-lg shadow-lg">
                        <p class="italic mb-4">"{testimonio.feedback}"</p>
                        <p class="font-bold">- {testimonio.name}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
